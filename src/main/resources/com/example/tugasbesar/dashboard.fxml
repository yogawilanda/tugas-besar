<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane fx:id="Dashboard" id="dashboard" prefHeight="610.0" prefWidth="1123.0"
            style="-fx-background-color: #242529;" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tugasbesar.Dashboard">

    <Button fx:id="btnNavLogout" layoutX="107.0" layoutY="483.0" text="Logout" onAction="#logOut">

    </Button>

    <Separator layoutX="298.0" orientation="VERTICAL" prefHeight="610.0" prefWidth="0.0"/>
    <AnchorPane layoutX="375.0" layoutY="39.0" prefHeight="532.0" prefWidth="339.0" style="-fx-background-color: gray;">
        <VBox layoutX="762.0" layoutY="98.0">
            <children>

                <Label prefHeight="17.0" prefWidth="200.0" text="Title Movies" textFill="WHITE"/>
                <Label prefHeight="17.0" prefWidth="200.0" text="Description" textFill="WHITE"/>
                <Label prefHeight="17.0" prefWidth="200.0" text="" textFill="WHITE"/>
                <Button fx:id="btnBookMovie" onAction="#confirmationBook" layoutX="107.0" layoutY="483.0" text="Purchase">

                </Button>
            </children>
        </VBox>
    </AnchorPane>


    <!--Table untuk menampilkan user yang telah mengikuti program-->
    <TableView fx:id="tableView" editable="true" fixedCellSize="0.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="554.0"
               prefWidth="315.0"
               style="-fx-background-color: #333333; -fx-border-radius: 5px; -fx-background-radius: 5px;"
               visible="false">

        <columns>
            <TableColumn fx:id="IDTableColumn" prefWidth="40.0" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="nameTableColumn" prefWidth="158.0" text="Pegawai">
                <cellValueFactory>
                    <PropertyValueFactory property="pegawai"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="salaryTableColumn" prefWidth="127.0" text="Salary">
                <cellValueFactory>
                    <PropertyValueFactory property="Salary"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
        <effect>
            <DropShadow color="aquamarine" radius="5"/>
        </effect>
    </TableView>

</AnchorPane>
