<BorderPane prefHeight="768" prefWidth="1366" style="-fx-background-color: #242529;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tugasbesar.Controller">

    <!--    Left Menu     -->
    <left>
        <AnchorPane fx:id="loginScene" prefHeight="768.0" prefWidth="585.0" style="-fx-background-color: #212121; ">
            <children>
                <Group id="AuthenticationLayout" layoutX="125.0" layoutY="133.0">
                    <children>
                        <TextField fx:id="usernameField" layoutX="1.0" layoutY="48.0" prefHeight="48.0" prefWidth="360.0" promptText="Your ID">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>

                        <Label layoutX="1.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Nice to see you again!" textFill="WHITE">
                            <font>
                                <Font size="21.0" />
                            </font>
                        </Label>

                        <PasswordField fx:id="passwordField" layoutX="1.0" layoutY="118.0" prefHeight="48.0" prefWidth="360.0" promptText="Password">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </PasswordField>

                        <Button layoutY="220.0" onAction="#login" prefHeight="48.0" prefWidth="360.0" style="-fx-background-color: #007AFF;" text="Login" textFill="#f8f8f8">
                            <font>
                                <Font name="Arial Bold" size="16.0" />
                            </font>
                        </Button>
                        <Label fx:id="statusLabel" layoutX="1.0" layoutY="284.0" prefHeight="71.0" prefWidth="359.0" text="Status" textFill="WHITE" />
                        <CheckBox layoutX="2.0" layoutY="182.0" mnemonicParsing="false" text="Remember me" textFill="WHITE" />
                    </children>
                </Group>
            </children>

        </AnchorPane>

    </left>

    <!--    Center Menu-->
    <center>

    </center>
    <center>
        <VBox alignment="CENTER" prefHeight="418.0" prefWidth="747.0" style="-fx-background-color: #242529;" BorderPane.alignment="CENTER">
            <AnchorPane fx:id="panelDataFrame" prefHeight="596.0" prefWidth="781.0">
                <children>

                    <HBox spacing="10" visible="false" fx:id="controlBtnDataFrame">

                        <ToggleButton fx:id="playToggleButton" layoutX="30.0" layoutY="30.0" mnemonicParsing="false"
                                onAction="#playMedia" text="Play"/>
                        <Button fx:id="openWebUrlButton" layoutX="260.0" layoutY="180.0" onAction="#openWebUrl" text="Open Web URL" />
                        <Button fx:id="openWebUrlButton2" layoutX="260.0" layoutY="180.0" onAction="#openWebUrl" text="Open Web URL 2" />
                        <Button fx:id="logout" onAction="#moveToNext" text="Logout" />
                        <ToggleButton fx:id="btnshowTable" onAction="#showTable" text="Show Table"/>
                        <Button fx:id="btnAddNewTable" onAction="#addRecord" text="Add User" />
                        <Button fx:id="btnUpdateUser" onAction="#updateRecord" text="Update User" />
                        <Button fx:id="btnDeleteUser" onAction="#deleteRecord" text="Delete User" />
                    </HBox>


                    <TableView fx:id="tableView" editable="true" fixedCellSize="0.0" layoutX="-467.0" layoutY="92.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="554.0" prefWidth="315.0" style="-fx-background-color: #FAFAFA;" visible="false">
                        <columns>
                            <TableColumn fx:id="IDTableColumn" prefWidth="40.0" text="ID">
                                <cellValueFactory>
                                    <PropertyValueFactory property="id" />
                                </cellValueFactory>
                                <cellFactory>
                                    <!--                                    <TextFieldTableCell fx:factory="forTableColumn" />-->
                                </cellFactory>
                            </TableColumn>

                            <!--Table Pegawai-->
                            <TableColumn fx:id="nameTableColumn" prefWidth="158.0" text="Pegawai">
                                <cellValueFactory>
                                    <PropertyValueFactory property="pegawai" />
                                </cellValueFactory>
                            </TableColumn>

                            <!--Table Salary-->
                            <TableColumn fx:id="salaryTableColumn" prefWidth="127.0" text="Salary">
                                <cellValueFactory>
                                    <PropertyValueFactory property="Salary" />
                                </cellValueFactory>
                                <cellFactory>
                                    <!-- <TextFieldTableCell fx:factory="forTableColumn" />-->
                                </cellFactory>
                            </TableColumn>
                        </columns>
                        <effect>
                            <ColorAdjust brightness="-0.15" contrast="1.0" />
                        </effect>
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                    </TableView>
                    <AnchorPane fx:id="imgAnchorLogin" layoutX="-4.0" layoutY="-3.0" style="-fx-background-color: #FFFF;" visible="false">
                        <children>
                            <ImageView fx:id="imgSceneLogin" fitHeight="754.0" fitWidth="744.0" pickOnBounds="true" smooth="false" visible="false">
                                <image>
                                    <!--                  <Image fx:id="imgScene" url="@../../../images/background.png" />-->
                                </image>
                            </ImageView>
                        </children>
                    </AnchorPane>
                </children>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </AnchorPane>
        </VBox>
    </center>
